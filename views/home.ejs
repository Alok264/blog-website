<%- include('partials/header'); -%>
<h1>Home</h1>
<p><%= homeStartingContent %></p>
<div class="row mb-2">
    <% posts.forEach(function(post){ %>
        <div class="col-md-6">
            <div class="row g-0 border rounded overflow-hidden flex-md-row mb-4 shadow-sm h-md-250 position-relative">
                <div class="col-lg-4 rounded-3">
                    <img src="images/45807.jpg" class="rounded-3" width="100%" height="100%" alt="Blog image">
                </div>
                <div class="col-lg-8 p-4 d-flex flex-column position-static">
                    <h3 class="mb-0"><%= post.title %></h3>
                    <div class="mb-1 text-body-secondary">Nov 12</div>
                    <p class="card-text mb-auto"><%= post.data.substring(0, 100)%></p>
                    <a href= "posts/<%= post.title %>" class="stretched-link">Continue reading</a>
                </div>
            </div>
        </div>
    <%})%>
</div>
<a href="/compose" class="btn btn-md btn-primary compose-button">Compose a Blog</a>
